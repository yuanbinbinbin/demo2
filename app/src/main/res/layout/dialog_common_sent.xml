<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/dialog_btn_send"
                android:layout_width="61dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_21a9ff_4_4_4_4"
                android:gravity="center"
                android:text="确定"
                android:textSize="14sp"
                android:textColor="@color/color_ffffff"/>

            <com.yb.demo.weights.BackEditText
                android:id="@+id/dialog_content_edtitext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/dialog_btn_send"
                android:background="@drawable/bg_sent_comment"
                android:hint="评论"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="4dp"
                android:maxHeight="75dp"
                android:minHeight="36dp"
                android:paddingBottom="0.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="0.0dip"
                android:textColor="#363636"
                android:textColorHint="#cccccc"
                android:textCursorDrawable="@null"
                android:textSize="16.0sp"
                android:visibility="visible" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>